#!/bin/bash

SYNCFROM='/Volumes/Chris2T/techtv/'
SYNCTO='/Volumes/external/techtv/'


if [[ -d $SYNCFROM && -d $SYNCTO ]]
then
    echo local sync
    rsync -vau --progress --delete-after $SYNCFROM $SYNCTO
else
    echo need drives Chris2T and external to both be mounted or need to implement network sync
    if [[ "`hostname -s`" == "kb" ]] 
    then
        ping -c 2 water && rsync -vazu --progress water:$SYNCFROM $SYNCTO
    elif [[ -d $SYNCFROM ]]
    then
        ping -c 2 kb && rsync -vazu --progress $SYNCFROM kb:$SYNCTO
    else
        echo no can do
    fi
fi
